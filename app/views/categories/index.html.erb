<div class='categories-container'>
<div class='sign-up-details category-header'>
<%= image_tag 'hamburger.png', class: 'search' %>
</div>
<div class='card-main-container'>
<% if @categories.empty? %>
<h3 class='centered-text'> Add a category </h3>
<% else %>
<% @categories.each_with_index do |category, index| %>
  <a href='/categories/<%= category.id %>/purchases'>
  <div class='card-container'>
  <% if category.present? %>
  <div class='icon-container'>
  <img class='company-icon' src="<%= category.icon %>" alt='category-icon'></img>
  </div>
  <div class='company-date'>
  <p><%= category.name %></p>
  <p class='date'><%= category.created_at.strftime('%e %b %Y') %></p>
  </div>
  <p>$ <%= @total_amount[index] %></p>
  <% else %>
  <p>Add a category</p>
  <% end %>
  </div>
  </a>
<% end %>
<% end %>
</div>
<a href="<%= new_user_category_path(current_user) %>" class='add-item'>
<div class='inner'>
  Add a category
</div>
</a>
</div>


<div class="menu-container">
  <div class='modal'>
    <div class='close-button-container'>
      <p></p>
      <span class="close-button">&times;</span>
    </div>
    <div class='ham-actions'>
      <p class='mb'>Signed in as <%= current_user.name %></p>
      <%= link_to "Edit Profile", edit_user_registration_path %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'in-out2' %>
    </div>
  </div>
</div>

<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "text-white h4 log_out" %>


