<div class='new-container'>
  <div class='sign-up-details'>
    <%= link_to category_purchases_path do %>
      <%= image_tag 'back.png', class: 'back' %>
    <% end %>
    <h2 class='centered-text'>Add a transaction</h2>
  </div>

  <%= form_with(model: [@categories, @new_purchase, @attribute[0]], url: category_purchases_path(@category.id), scope: :purchase) do |form| %>
    <div class='form-container'>
      <div class='field'>
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, placeholder: 'Enter transaction name here...' %>
      </div>

      <div class='field'>
        <%= form.label :amount %>
        <%= form.number_field :amount, placeholder: 'Enter amount for the transaction...' %>
      </div>
      <%= hidden_field_tag 'category_id', @category.id %>
      <br/>
      <div class='selection_field'>
      <%= form.label :category_id, 'Select Category' %><br />
      <%= form.collection_select(:category_id,@attribute[1], :id, :name, { include_blank: ''}) %>
    </div>

      <div class="actions">
        <%= form.submit "Add", class: 'in-out' %>
      </div>
    </div>
  <% end %>
</div>